          <div class="row">
            <% @tuxedos.each do |tuxedo| %>
              <div class="col-md-4">
                <div class="thumbnail">
                  <%= link_to tuxedo_path(tuxedo) do %>
                    <%= image_tag 'tb12' %>
                  <% end %>
